<?xml version="1.0" encoding="UTF-8"?>
<model>
	<config>
		<name>Picture</name>
		<table>Pictures</table>
		<callback>true</callback>
		<repository>true</repository>
	</config>
	<fields>
		<field>
			<name>id</name>
			<type>index</type>
		</field>		
		<field>
			<name>url</name>
			<type>string</type>
			<length>255</length>
		</field>
	</fields>
	<validations>		
		<validation>
			<field>url</field>
			<rules>
				<rule>
					<type>notEmpty</type>
					<message>url image can't be empty</message>
				</rule>
			</rules>
		</validation>
	</validations>
</model>
